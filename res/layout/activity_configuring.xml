<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    >
    
    <!-- Background & navbar -->
        
    <ImageView
    		android:layout_height="fill_parent"
    		android:layout_width="fill_parent"
    		android:scaleType="centerCrop"
    		android:src="@drawable/device_list_bg"
    		android:layout_centerHorizontal="true"
    		android:layout_centerVertical="true"
    		/>
    	    
    <ImageView
    		android:id="@+id/navbar"
    		android:layout_height="wrap_content"
    		android:layout_width="fill_parent"
    		android:scaleType="centerCrop"
    		android:src="@drawable/navbar_bg"
    		android:layout_centerHorizontal="true"
    		android:layout_alignParentTop="true"
    		/>
    		
    <!-- Back button & spinning icon -->
    	
    <ImageView
    		android:id="@+id/btn_back"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:scaleType="centerCrop"
    		android:src="@drawable/navbar_back"
    		android:layout_alignParentLeft="true"
    		android:layout_alignParentTop="true"
    		/>
    		
    <ImageView
    		android:id="@+id/loading_icon"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:scaleType="centerCrop"
    		android:src="@drawable/loading_icon"
    		android:layout_alignParentRight="true"
    		android:layout_alignParentTop="true"
    		android:visibility="invisible"
    		/>
    		
    <!-- The rest -->
    		
    <ImageView android:src="@drawable/chumby"
    		android:id="@+id/chumby_logo"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:scaleType="centerInside"
    		android:layout_centerHorizontal="true"
    		android:layout_centerVertical="true"
    		/>
    <TextView
    		android:text="@string/please_wait_while_configuring"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/navbar"
    		android:gravity="center"
    		android:textSize="13sp"
		    android:textColor="#CCCCCC" 
    		/>
    <TextView
    		android:id="@+id/txtActivationStatus"
    		android:text="A good placeholder for a nice slogan"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center_horizontal"
    		android:layout_alignParentBottom="true"
    		/>
</RelativeLayout>