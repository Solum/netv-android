<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    >
    
    <!-- Background & navbar -->
        
    <ImageView
    		android:layout_height="fill_parent"
    		android:layout_width="fill_parent"
    		android:scaleType="centerCrop"
    		android:src="@drawable/device_list_bg"
    		android:layout_centerHorizontal="true"
    		android:layout_centerVertical="true"
    		/>
    	    
    <ImageView
    		android:id="@+id/navbar"
    		android:layout_height="wrap_content"
    		android:layout_width="fill_parent"
    		android:scaleType="centerCrop"
    		android:src="@drawable/navbar_bg"
    		android:layout_centerHorizontal="true"
    		android:layout_alignParentTop="true"
    		/>
    		
    <!-- Back button & spinning icon -->
    	
    <ImageView
    		android:id="@+id/btn_back"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:scaleType="centerCrop"
    		android:src="@drawable/navbar_back"
    		android:layout_alignParentLeft="true"
    		android:layout_alignParentTop="true"
    		/>
    		
    <ImageView
    		android:id="@+id/loading_icon"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:scaleType="centerCrop"
    		android:src="@drawable/loading_icon"
    		android:layout_alignParentRight="true"
    		android:layout_alignParentTop="true"
    		/>
    		
    <!-- Logo & version number -->
    			
    <ImageView
    		android:id="@+id/chumby_logo"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:scaleType="centerInside"
    		android:src="@drawable/chumby"
    		android:layout_centerInParent="true"/>
    <TextView
    		android:text="0.0.0"
    		android:id="@+id/textViewVersion"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/chumby_logo"
    		android:gravity="center"
    		android:textSize="14sp"
		    android:textColor="#CCCCCC" 
    		/>

    <!-- Status text -->
    
	<TextView
    		android:text=""
    		android:id="@+id/textViewVersionWarning"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/textViewVersion"
    		android:gravity="center"
    		android:textSize="14sp"
		    android:textColor="#CC0000" 
    		/>
    <TextView
    		android:id="@+id/textViewStatus"
    		android:text="A good placeholder for a nice slogan"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center_horizontal"
    		android:layout_alignParentBottom="true"
    		/>
</RelativeLayout>
